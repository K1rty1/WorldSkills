<Page x:Class="WorldSkills.Pages.TeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldSkills.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherPage">

    <Grid>
        <StackPanel>
            <Button Content="Добавить студента" x:Name="AddStudentButton" Click="AddStudentButton_Click"></Button>
            <Button Content="Добавить оцкенку" x:Name="AddMarkButton" Click="AddMarkButton_Click"></Button>
            <Button Content="Список студентов" x:Name="ListOfStudentButton" Click="ListOfStudentButton_Click"></Button>
            <Button Content= "Редактировать оценку"></Button>
            <Button Content="Удалить студента"></Button>
        </StackPanel>
    </Grid>
</Page>
