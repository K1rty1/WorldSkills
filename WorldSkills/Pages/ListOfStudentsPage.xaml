<Page x:Class="WorldSkills.Pages.ListOfStudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldSkills.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListOfStudentsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Background="White">Выберите группу</Label>
            <ComboBox></ComboBox>
            <Button Content="Вывод отчета Word" x:Name="ReportOutputWorld" Click="ReportOutputWorld_Click"></Button>
            <Button Content="Вывод отчета Excel" x:Name="ReportOutputExcel"  Click="ReportOutputExcel_Click"></Button>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBox x:Name="FIOTextBox" Text="ФИО"></TextBox>
            <TextBox x:Name="SPECTextBox" Text="Специальность">
            </TextBox>
            <Button Content="Кнопка" x:Name="ReportButton" Click="ReportButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
