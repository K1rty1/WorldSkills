            <ComboBox></ComboBox>
            <TextBox Text="Форма обучения"></TextBox>
            <ComboBox></ComboBox>
            <TextBox Text="Название группы"></TextBox>
            <ComboBox></ComboBox>
            <Button Content="Создать" x:Name="CreateStudent" Click="CreateStudent_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
